using Gtk 4.0;
using Adw 1;

template $FontRow: Box {
  margin-top: 12;
  margin-start: 18;
  margin-end: 24;
  orientation: vertical;
  spacing: 6;
  hexpand: true;

  Box {
    spacing: 9;

    Label {
      halign: start;
      wrap: true;

      styles [
        "heading",
      ]

      label: bind (template.font_model as <$FontModel>).display_name;
    }

    Separator {
      visible: bind (template.font_model as <$FontModel>).is_installed;
    }

    Label {
      label: _("Installed");
      visible: bind (template.font_model as <$FontModel>).is_installed;

      styles [
        "accent",
        "caption-heading",
      ]
    }

    Adw.Spinner {
      visible: bind (template.font_model as <$FontModel>).is_installing;
    }
  }

  Label {
    wrap: true;
    halign: start;
    label: bind (template.font_model as <$FontModel>).category_label;

    styles [
      "caption",
    ]
  }

  Label {
    halign: start;
    label: bind (template.font_model as <$FontModel>).subsets_label;
    wrap: true;

    styles [
      "dimmed",
      "caption",
    ]
  }

  Inscription preview_inscription {
    height-request: 72;
    wrap-mode: none;
    text-overflow: clip;
    markup: bind (template.font_model as <$FontModel>).preview_markup;
  }
}
