using Gtk 4.0;
using Gio 2.0;

template $FontsView: ScrolledWindow {
  hscrollbar-policy: never;

  ListView {
    show-separators: true;

    factory: SignalListItemFactory {
      setup => $on_font_view_setup();
      bind => $on_font_view_bind();
    };

    model: NoSelection {
      model: Gio.ListStore list_store {
        item-type: typeof<$FontItem>;
      };
    };
  }
}
